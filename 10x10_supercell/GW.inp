&GLOBAL
  PROJECT  MoS2
  PRINT_LEVEL MEDIUM
  RUN_TYPE ENERGY
  &TIMINGS
     THRESHOLD 0.01
  &END
!  TRACE
&END GLOBAL
&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME  /pc2/groups/hpc-prf-eprop2d/eprop2d1_Jan/02_compile_CP2K/39_merge/cp2k/data/BASIS_PERIODIC_GW
    POTENTIAL_FILE_NAME  /pc2/groups/hpc-prf-eprop2d/eprop2d1_Jan/02_compile_CP2K/39_merge/cp2k/data/GTH_SOC_POTENTIALS
    SORT_BASIS EXP
    UKS
    MULTIPLICITY 2
    CHARGE 1
    &MGRID
      CUTOFF  500
      REL_CUTOFF  100
    &END MGRID
    &QS
      METHOD GPW
      EPS_DEFAULT 1.0E-40
      EPS_PGF_ORB 1.0E-40
    &END QS
    &SCF
      SCF_GUESS RESTART
      EPS_SCF 1.0E-8
      MAX_SCF 300
      &PRINT
        &RESTART ON
        &END
      &END
      &MIXING
          METHOD BROYDEN_MIXING
          ALPHA 0.1
          BETA 1.5
          NBROYDEN 8
      &END
    &END SCF
    &XC
      &XC_FUNCTIONAL LDA
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &PROPERTIES
    &BANDSTRUCTURE
      &GW
        NUM_TIME_FREQ_POINTS         10
        MEMORY_PER_PROC              16
        EPS_FILTER               1.0E-6
      &END
      &DOS
        ! should be increased
        KPOINTS 2 2 1
      &END 
      &SOC
        ENERGY_WINDOW              20.0
      &END
    &END
  &END PROPERTIES
  &SUBSYS
    &CELL
        A                  31.86 0.0 0.0
        B                  -15.93 27.59 0.0
        C                  0.0 0.0 15.0
        PERIODIC XY
        MULTIPLE_UNIT_CELL 1 1 1
    &END CELL
    &TOPOLOGY
      COORD_FILE struc.xyz
      COORD_FILE_FORMAT XYZ
      MULTIPLE_UNIT_CELL 1 1 1
    &END TOPOLOGY
    &KIND S
      BASIS_SET ORB    TZVP-MOLOPT-GTH_upscaled
      BASIS_SET RI_AUX RI
      POTENTIAL        GTH-PADE-q6
    &END KIND

    &KIND Se
      BASIS_SET ORB    TZVP-MOLOPT-GTH_upscaled
      BASIS_SET RI_AUX RI
      POTENTIAL        GTH-PADE-q6
    &END KIND

    &KIND Mo
      BASIS_SET ORB    TZVP-MOLOPT-GTH_upscaled
      BASIS_SET RI_AUX RI
      POTENTIAL        GTH-PADE-q14
    &END KIND

    &KIND W
      BASIS_SET ORB    TZVP-MOLOPT-GTH_upscaled
      BASIS_SET RI_AUX RI
      POTENTIAL        GTH-PADE-q14
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
